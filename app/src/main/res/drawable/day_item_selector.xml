<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the item is selected -->
    <item android:state_selected="true">
        <!-- Thay thế @drawable/day_item_selected_background bằng code dưới đây -->
        <shape android:shape="rectangle">
            <!-- Màu nền khi được chọn -->
            <solid android:color="@color/day_select_button" />

            <!-- Bo tròn các góc (tùy chọn) -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/day_button" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>
