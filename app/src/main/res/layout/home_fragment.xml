<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context=".activitys.MainActivity"
    >

    <!-- Nội dung chính -->
    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/bottom_nav"
        tools:ignore="NotSibling">

        <LinearLayout
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_profile"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xin chao, User!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chuc ban mot ngay tot lanh"
                    android:textSize="24sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <!-- Thanh tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Lịch trình"
            android:textColor="#000"
            android:textSize="32sp" />


        <HorizontalScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:background="#EEEEEE">

            <LinearLayout
                android:id="@+id/weekDaysLayout"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:paddingHorizontal="8dp">

                <!-- Thứ 2 -->
                <LinearLayout
                    android:id="@+id/llMon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/day_item_selector"
                    android:layout_marginHorizontal="4dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvMonDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TH2"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvMonDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#555"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Thứ 3 -->
                <LinearLayout
                    android:id="@+id/llTue"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/day_item_selector"
                    android:layout_marginHorizontal="4dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvTueDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TH3"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvTueDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="#555"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Thứ 4 -->
                <LinearLayout
                    android:id="@+id/llWed"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/day_item_selector"
                    android:layout_marginHorizontal="4dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvWedDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TH4"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvWedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#555"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Thứ 5 -->
                <LinearLayout
                    android:id="@+id/llThu"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/day_item_selector"
                    android:layout_marginHorizontal="4dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvThuDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TH5"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvThuDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="#555"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Thứ 6 -->
                <LinearLayout
                    android:id="@+id/llFri"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/day_item_selector"
                    android:layout_marginHorizontal="4dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvFriDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TH6"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvFriDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="#555"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Thứ 7 -->
                <LinearLayout
                    android:id="@+id/llSat"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/day_item_selector"
                    android:layout_marginHorizontal="4dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvSatDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TH7"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvSatDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="#555"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Chủ nhật -->
                <LinearLayout
                    android:id="@+id/llSun"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/day_item_selector"
                    android:layout_marginHorizontal="4dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvSunDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CN"
                        android:textStyle="bold"
                        android:textColor="#D84315"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvSunDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textColor="#D84315"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>



        <!-- Danh sách lịch -->
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="#F9F9F9">

            <LinearLayout
                android:id="@+id/layoutSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- ====== MỤC 1 → 7 ====== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/time_bg"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:text="6:00 - 7:00"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/schedule_item_bg"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvTaskTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tập thể dục buổi sáng"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTaskLocation1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa điểm: Công viên Lê Thị Riêng"
                            android:textColor="#555"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvTaskNote1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú: Mang theo nước và khăn tập"
                            android:textColor="#777"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Copy layout trên cho các mục còn lại, chỉ thay đổi:
                     - text thời gian
                     - id tvTaskTitleX, tvTaskLocationX, tvTaskNoteX
                     - nội dung title, location, note
                     → tất cả marginStart = 16dp, layout_marginBottom = 16dp, padding = 8dp -->

                <!-- ====== MỤC 2 ====== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/time_bg"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:text="8:00 - 9:00"
                        android:textColor="#FFF"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/schedule_item_bg"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvTaskTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ăn sáng và chuẩn bị đi làm"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTaskLocation2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa điểm: Nhà bếp"
                            android:textColor="#555"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvTaskNote2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú: Chuẩn bị tài liệu họp sáng"
                            android:textColor="#777"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ====== MỤC 3 ====== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/time_bg"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="10:00 - 11:30"
                        android:textColor="#FFF"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/schedule_item_bg"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvTaskTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Họp nhóm dự án"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTaskLocation3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa điểm: Phòng họp tầng 3"
                            android:textColor="#555"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvTaskNote3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú: Chuẩn bị báo cáo sprint"
                            android:textColor="#777"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ====== MỤC 4 ====== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/time_bg"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="14:00 - 16:00"
                        android:textColor="#FFF"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/schedule_item_bg"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvTaskTitle4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Làm việc tại văn phòng"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTaskLocation4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa điểm: Công ty ABC"
                            android:textColor="#555"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvTaskNote4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú: Kiểm tra email khách hàng"
                            android:textColor="#777"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ====== MỤC 5 ====== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/time_bg"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="17:00 - 19:00"
                        android:textColor="#FFF"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/schedule_item_bg"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvTaskTitle5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tập gym"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTaskLocation5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa điểm: Phòng gym California"
                            android:textColor="#555"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvTaskNote5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú: Tập ngực và tay"
                            android:textColor="#777"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ====== MỤC 6 ====== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/time_bg"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="20:00 - 22:00"
                        android:textColor="#FFF"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/schedule_item_bg"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvTaskTitle6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Học lập trình Android"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTaskLocation6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa điểm: Tại nhà"
                            android:textColor="#555"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvTaskNote6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú: Hoàn thành project app tính toán"
                            android:textColor="#777"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ====== MỤC 7 ====== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/time_bg"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="22:00 - 23:00"
                        android:textColor="#FFF"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/schedule_item_bg"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvTaskTitle7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thư giãn và đọc sách"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTaskLocation7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa điểm: Phòng ngủ"
                            android:textColor="#555"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvTaskNote7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú: Đọc 30 phút sách Android"
                            android:textColor="#777"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>



    </LinearLayout>
</RelativeLayout>
