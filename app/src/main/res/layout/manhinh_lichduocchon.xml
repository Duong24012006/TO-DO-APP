<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_manhinh_lichduocchon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#E0E0E0">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnBack"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#BFBFBF"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"
                android:contentDescription="Back" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#BFBFBF">

            <TextView
                android:id="@+id/tvTitleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tên lịch"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Main white card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainContentCard"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/bottomNavigation"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Title row and Apply button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvSectionTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Lịch trình"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btnApplySchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_apply_background"
                    android:text="Áp dụng lịch"
                    android:textSize="24sp"
                    android:padding="8dp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Days horizontal -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/daysContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/day2"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#A9A9A9"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thứ\n2"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/day3"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#A9A9A9"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thứ\n3"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/day4"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#A9A9A9"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thứ\n4"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/day5"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#A9A9A9"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thứ\n5"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/day6"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#A9A9A9"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thứ\n6"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/day7"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#A9A9A9"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thứ\n7"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/dayCN"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#A9A9A9">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CN"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- RecyclerView for time slots -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/scheduleRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation placeholder -->
    <FrameLayout
        android:id="@+id/bottomNavigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#D6D6D6">
        <!-- Keep as placeholder or include your fragment host -->
    </FrameLayout>

</RelativeLayout>