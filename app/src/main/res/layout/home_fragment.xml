<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragment.HomeFragment">

    <!-- Main title -->
    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Lịch trình chung"
        android:textColor="#000"
        android:textSize="32sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Day selector (Thứ 2 .. Chủ nhật) -->
    <HorizontalScrollView
        android:id="@+id/day_bar_scroll"
        android:layout_below="@id/tvMainTitle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <LinearLayout
            android:id="@+id/weekDaysLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Thứ 2 -->
            <LinearLayout
                android:id="@+id/llMon"
                android:layout_width="72dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tvMonDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THỨ"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvMonDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Thứ 3 -->
            <LinearLayout
                android:id="@+id/llTue"
                android:layout_width="72dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tvTueDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THỨ"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Thứ 4 -->
            <LinearLayout
                android:id="@+id/llWed"
                android:layout_width="72dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tvWedDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THỨ"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvWedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Thứ 5 -->
            <LinearLayout
                android:id="@+id/llThu"
                android:layout_width="72dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tvThuDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THỨ"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvThuDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Thứ 6 -->
            <LinearLayout
                android:id="@+id/llFri"
                android:layout_width="72dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tvFriDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THỨ"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvFriDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Thứ 7 -->
            <LinearLayout
                android:id="@+id/llSat"
                android:layout_width="72dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tvSatDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THỨ"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvSatDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Chủ nhật -->
            <LinearLayout
                android:id="@+id/llSun"
                android:layout_width="72dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tvSunDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHỦ"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvSunDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NHẬT"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Container: single RecyclerView to show schedule items (no time column) -->
    <FrameLayout
        android:id="@+id/home_schedule_container"
        android:layout_below="@id/day_bar_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp">

        <!-- Use this RecyclerView to display per-day activities as simple cards (title / location / note).
             Adapter should bind a list of activities for the selected day.
             Replace tools:listitem with your item layout (item_schedule_simple.xml) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHomeActivities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:clipToPadding="false"
            android:visibility="visible"
            tools:listitem="@layout/item_schedule_simple" />

    </FrameLayout>

</RelativeLayout>