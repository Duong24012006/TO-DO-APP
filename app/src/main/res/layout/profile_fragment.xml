<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hồ sơ người dùng"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Avatar circle with yellow background -->
    <FrameLayout
        android:id="@+id/fl_avatar_bg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_avatar_circle"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_title"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile"
            android:contentDescription="avatar" />
    </FrameLayout>

    <!-- User name -->
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dương Nguyễn"
        android:fontFamily="sans-serif-medium"
        android:textSize="32sp"
        android:textColor="#444444"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/fl_avatar_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- White rounded card containing "Lịch sử" and items -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_history"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- Section title -->
            <TextView
                android:id="@+id/tv_section_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch sử"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:textSize="32sp"
                android:textColor="#000000" />

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- Example item: gray rounded item with title, subtitle, and chevron -->
            <LinearLayout
                android:id="@+id/ll_history_item"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/round_grey_bg"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên lịch"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_item_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Template này dành cho sinh viên muốn tối đa hóa thời gian học tập nhưng với mức ngủ tối thiểu."
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="6dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_chevron"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="22dp"
                    android:src="@drawable/ic_chevron_right"
                    android:contentDescription="next" />
            </LinearLayout>

            <!-- Bạn có thể nhân bản ll_history_item hoặc chuyển thành RecyclerView nếu cần danh sách động -->
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>