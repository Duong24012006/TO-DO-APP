<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    >

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#DDDDDD">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch trình"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222" />
    </LinearLayout>

    <!-- Days horizontal scroll -->
    <HorizontalScrollView
        android:id="@+id/hs_days"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Example day buttons - replicate for 7 days -->
            <TextView
                android:id="@+id/day_2"
                style="@style/DayButtonStyle"
                android:text="Thứ\n2"
                android:background="@drawable/day_selector"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/day_3"
                style="@style/DayButtonStyle"
                android:text="Thứ\n3"
                android:background="@drawable/day_selector"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/day_4"
                style="@style/DayButtonStyle"
                android:text="Thứ\n4"
                android:background="@drawable/day_selector"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/day_5"
                style="@style/DayButtonStyle"
                android:text="Thứ\n5"
                android:background="@drawable/day_selector"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/day_6"
                style="@style/DayButtonStyle"
                android:text="Thứ\n6"
                android:background="@drawable/day_selector"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/day_7"
                style="@style/DayButtonStyle"
                android:text="Thứ\n7"
                android:background="@drawable/day_selector"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/day_cn"
                style="@style/DayButtonStyle"
                android:text="CN"
                android:background="@drawable/day_selector" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView of time rows -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_times"
        android:layout_below="@id/hs_days"
        android:layout_above="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp" />

    <!-- Bottom nav placeholder -->
    <FrameLayout
        android:id="@+id/bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#D6D6D6">
        <!-- You can put your bottom fragment or navigation here -->
    </FrameLayout>

</RelativeLayout>